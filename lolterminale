# Script da eseguire all'avvio del terminale, che cambia alcuni comandi comuni con altri un po scomodi

alias ls='sl'
alias cd='fortune'
alias less='cat'
alias gedit='cat'
alias emacs='cat'
alias geany='cat'
alias vim='cat'
alias vi='cat'
alias nano='cat'
alias rm='sleep 10s; sl '
alias cp='sleep 10s; sl '
alias mv='cp'
alias rsync='echo "rsync has been disabled by system monkey"; cp'
alias command='echo PUPPA'
alias unalias='sleep 15s; echo PUPPA'

# `alias` dev'essere l'ultimo
alias alias='echo PUPPA'
